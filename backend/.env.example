# Database Configuration
# For local development (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/travel_db

# For Railway (will be provided automatically)
# DATABASE_URL=postgresql://postgres:password@host:port/railway
# DATABASE_PRIVATE_URL=postgresql://postgres:password@internal-host:port/railway

# Redis Configuration  
# For local development
REDIS_URL=redis://localhost:6379/0

# For Railway (will be provided automatically)
# REDIS_URL=redis://default:password@host:port
# REDIS_PRIVATE_URL=redis://default:password@internal-host:port

# API Keys for external services
SERPAPI_KEY=your_serpapi_key_here
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret

# Image Storage (Cloudinary recommended for Railway)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app

# Application Settings
DEBUG=true
APP_NAME="Next24 Travel API"
API_V1_PREFIX="/api/v1"

# Railway specific (set automatically by Railway)
# PORT=8000
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your-project-id